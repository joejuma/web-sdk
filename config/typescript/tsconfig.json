{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    "sourceMap": true
  },
  "include": ["../../src"]
}
